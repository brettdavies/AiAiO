{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "functions": {
      "port": 5001
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "SecurityRules/firestore.rules",
    "indexes": "Indexes/firestore.indexes.json"
  },
  "database": {
    "rules": "SecurityRules/database.rules.json",
    "port": 9000
  },
  "storage": {
    "rules": "SecurityRules/storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "auth": {
    "providers": {
      "email": {
        "enabled": true,
        "passwordPolicy": {
          "minLength": 6,
          "requireNumbers": true,
          "requireSpecialCharacters": true,
          "requireUppercase": true
        }
      },
      "google": {
        "enabled": true,
        "clientId": "${GOOGLE_CLIENT_ID}",
        "clientSecret": "${GOOGLE_CLIENT_SECRET}"
      }
    }
  },
  "logging": {
    "development": {
      "level": "debug",
      "emulator": true,
      "crashlytics": false
    },
    "production": {
      "level": "warning",
      "emulator": false,
      "crashlytics": true
    }
  }
}
