{
    "emulators": {
        "auth": {
            "port": "${FIREBASE_AUTH_EMULATOR_PORT}",
            "host": "${FIREBASE_AUTH_EMULATOR_HOST}"
        },
        "firestore": {
            "port": "${FIREBASE_FIRESTORE_EMULATOR_PORT}",
            "host": "${FIREBASE_FIRESTORE_EMULATOR_HOST}"
        },
        "functions": {
            "port": "${FIREBASE_FUNCTIONS_EMULATOR_PORT}",
            "host": "${FIREBASE_FUNCTIONS_EMULATOR_HOST}"
        },
        "storage": {
            "port": "${FIREBASE_STORAGE_EMULATOR_PORT}",
            "host": "${FIREBASE_STORAGE_EMULATOR_HOST}"
        },
        "ui": {
            "enabled": true,
            "port": "${FIREBASE_EMULATOR_UI_PORT}"
        }
    },
    "firestore": {
        "rules": "SecurityRules/firestore.rules",
        "indexes": "Indexes/firestore.indexes.json"
    },
    "database": {
        "rules": "SecurityRules/database.rules.json"
    },
    "storage": {
        "rules": "SecurityRules/storage.rules"
    },
    "functions": {
        "source": "functions",
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ],
        "runtime": "nodejs18",
        "region": "${FIREBASE_REGION}",
        "memory": "${FUNCTION_MEMORY}",
        "timeoutSeconds": "${FUNCTION_TIMEOUT_SECONDS}",
        "minInstances": "${MIN_INSTANCES}",
        "maxInstances": "${MAX_INSTANCES}"
    },
    "auth": {
        "providers": {
            "email": {
                "enabled": true,
                "passwordPolicy": {
                    "minLength": 6,
                    "requireNumbers": true,
                    "requireSpecialCharacters": true,
                    "requireUppercase": true
                }
            },
            "google": {
                "enabled": true,
                "clientId": "${GOOGLE_CLIENT_ID}",
                "clientSecret": "${GOOGLE_CLIENT_SECRET}"
            }
        }
    },
    "logging": {
        "development": {
            "level": "debug",
            "destination": "Firebase",
            "emulator": true,
            "crashlytics": false
        },
        "production": {
            "level": "warning",
            "destination": "Firebase",
            "emulator": false,
            "crashlytics": true
        }
    }
}