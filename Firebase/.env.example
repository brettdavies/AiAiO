# Firebase Project Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_REGION=us-central1

# Emulator Configuration
FIREBASE_AUTH_EMULATOR_PORT=9099
FIREBASE_AUTH_EMULATOR_HOST=localhost
FIREBASE_FIRESTORE_EMULATOR_PORT=8080
FIREBASE_FIRESTORE_EMULATOR_HOST=localhost
FIREBASE_FUNCTIONS_EMULATOR_PORT=5001
FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost
FIREBASE_STORAGE_EMULATOR_PORT=9199
FIREBASE_STORAGE_EMULATOR_HOST=localhost
FIREBASE_EMULATOR_UI_PORT=4000

# Development Settings
FIREBASE_LOGGING_LEVEL=debug
FIREBASE_OFFLINE_PERSISTENCE=true
FIREBASE_CACHE_SIZE_MB=100

# Function Configuration
FUNCTION_MEMORY=256MB
FUNCTION_TIMEOUT_SECONDS=60
MIN_INSTANCES=0
MAX_INSTANCES=auto

# Video Summary Function Configuration
FIREBASE_STORAGE_BUCKET=${FIREBASE_PROJECT_ID}.firebasestorage.app
OPENAI_API_KEY=your-openai-api-key
VIDEO_SUMMARY_MEMORY=1024MB
VIDEO_SUMMARY_TIMEOUT_SECONDS=540
VIDEO_SUMMARY_MIN_INSTANCES=0
VIDEO_SUMMARY_MAX_INSTANCES=10
VIDEO_SUMMARY_MAX_FRAMES=248
